{
  "name": "react-ts",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "npm run dev-api",
    "api": "cross-env NODE_ENV=development nodemon --ignore ./api-data/db.json server",
    "api-jsonserver": "json-server --port 8000 ./api-data/db.json",
    "dev": "cross-env NODE_ENV=development vite --host",
    "tw": "npx @tailwindcss/cli -i ./src/assets/css/index.tailwind.css -o ./public/css/index.css",
    "tw-watch": "npx @tailwindcss/cli -i ./src/assets/css/index.tailwind.css -o ./public/css/index.css --watch",
    "dev-api": "npx concurrently -c '#fdba74,#93c5fd' 'npm run api' 'npm run dev' --names=API,Vite",
    "dev-api-jsonserver": "npx concurrently -c '#fdba74,#93c5fd' 'npm run api-jsonserver' 'npm run dev' --names=API,Vite",
    "dev-api-parallel": "(npm run api &) && npm run dev",
    "dev-api-tw": "npm run tw && npx concurrently -c '#fdba74,#93c5fd' 'npm run api' 'npm run dev' --names=API,Vite",
    "build": "cross-env NODE_ENV=production npm run tw && tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "sync-deps": "npm prune && npm i",
    "sync-deps-exact": "npm prune && npm ci"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.12",
    "@tailwindcss/vite": "^4.0.12",
    "axios": "^1.8.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "lowdb": "^7.0.1",
    "react": "^19.0.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.3.0",
    "tailwindcss": "^4.0.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.1"
  },
  "engines": {
    "node": "22.14.0"
  }
}
